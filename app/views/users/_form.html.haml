= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :role_id
    %br/
    = select("user", "role_id", Role.all.collect {|p| [ p.name, p.id ] }, { include_blank: true })
  .field
    = f.label :password
    %br/
    = f.password_field :password, placeholder: "Leave blank if unchanged"
  .actions
    = f.submit
